<Window x:Class="MapTP.App.AdvancedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapTP.App"
        mc:Ignorable="d"
        Title="MapTP - 日志窗口" Height="200" MinHeight="200" Width="430">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="LogBox" Margin="0,0,0,10"  TextWrapping="Wrap"
  IsReadOnly="True"
  VerticalScrollBarVisibility="Visible" VerticalContentAlignment="Bottom" Text="日志将会在这里显示"/>
        <Grid Grid.Row="1" Margin="7,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="181*"/>
                <ColumnDefinition Width="222*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <CheckBox Grid.Column="0" x:Name="AutoScrollCB" HorizontalAlignment="Left" Height="23" Width="154" IsChecked="True" Content="自动滚动"/>
            <CheckBox Grid.Column="1" x:Name="OneLineCB" HorizontalAlignment="Left" Height="23" Width="212" IsChecked="True" Content="只显示最新一行日志(关闭可能卡顿)"/>
            <CheckBox Grid.Column="0" Grid.Row="1" x:Name="TPInputCB" HorizontalAlignment="Left" Height="23" Width="154" IsChecked="True" Content="显示触控板输入"/>
            <CheckBox Grid.Column="1" Grid.Row="1" x:Name="TPFirstCB" HorizontalAlignment="Left" Height="23" Width="179" IsChecked="True" Content="当多指输入时仅显示一个坐标"/>
        </Grid>
    </Grid>
</Window>
